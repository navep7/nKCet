<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/tx_cet"
        android:text="CET"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_margin="@dimen/fab_margin"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_phy"
        android:text="Physics"
        android:textStyle="bold"
        android:textSize="@dimen/question_text_size"
        android:layout_below="@+id/tx_cet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_che"
        android:text="Chemistry"
        android:textStyle="bold"
        android:textSize="@dimen/question_text_size"
        android:layout_below="@+id/btn_phy"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_math"
        android:text="Maths"
        android:textStyle="bold"
        android:textSize="@dimen/question_text_size"
        android:layout_below="@+id/btn_che"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_bio"
        android:text="Biology"
        android:textStyle="bold"
        android:textSize="@dimen/question_text_size"
        android:layout_below="@+id/btn_math"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.ads.nativetemplates.TemplateView
        android:id="@+id/nativeTemplateView"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_bio"
        android:layout_margin="@dimen/fab_margin"
        app:gnt_template_type="@layout/gnt_medium_template_view" />




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/cet_icon" />


</RelativeLayout>